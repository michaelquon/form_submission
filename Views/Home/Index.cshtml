<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Document</title>
</head>
<body>
    @{
    ViewData["Title"] = "Home Page";
}
<div id="wrapper">
    <h1>Enter your information</h1>
    @model form.Models.User
    <form asp-controller="Home" asp-action="Register" method="post">
        <table>
            <tr>
                <td><label asp-for="FirstName"></label></td>
                <td><input asp-for="FirstName"></td>
                <td><span asp-validation-for="FirstName"></span></td>
            </tr>
            <tr>
                <td><label asp-for="LastName"></label></td>
                <td><input asp-for="LastName"></td>
                <td><span asp-validation-for="LastName"></span></td>
            </tr>
             <tr>
                <td><label asp-for="Age"></label></td>
                <td><input type="number" asp-for="Age"></td>
                <td><span asp-validation-for="Age"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Email"></label></td>
                <td><input asp-for="Email"></td>
                <td><span asp-validation-for="Email"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Password"></label></td>
                <td><input type="password" asp-for="Password"></td>
                <td><span asp-validation-for="Password"></span></td>
            </tr>
            <td></td>
            <td><button style="float: right;" type="submit" class="btn btn-primary">Submit</button></td>
        </table>
        
    </form>
</div>
</body>
</html>

